<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Mini Blog</title>
  <style>
    body { font-family: sans-serif; max-width: 600px; margin: 2rem auto; }
    form { margin: 1rem 0; }
    input, textarea { width: 100%; margin: .3rem 0; padding: .4rem; }
    button { padding: .4rem .8rem; margin-top: .4rem; }
    .post { border: 1px solid #ccc; padding: 1rem; margin: 1rem 0; }
    .meta { font-size: .8rem; color: #666; }
  </style>
</head>
<body>
  <h1>Mini Blog</h1>

  <% if (typeof editPost !== "undefined") { %>
    <h2>Edit Post</h2>
    <form action="/posts/<%= editPost.id %>?_method=PUT" method="POST">
      <input type="text" name="title" value="<%= editPost.title %>" required>
      <textarea name="content" required><%= editPost.content %></textarea>
      <input type="text" name="author" value="<%= editPost.author %>" required>
      <button type="submit">Update</button>
    </form>
  <% } else { %>
    <h2>New Post</h2>
    <form action="/posts" method="POST">
      <input type="text" name="title" placeholder="Title" required>
      <textarea name="content" placeholder="Write your blog..." required></textarea>
      <input type="text" name="author" placeholder="Author" required>
      <button type="submit">Post</button>
    </form>
  <% } %>

  <h2>All Posts</h2>
  <% posts.forEach(post => { %>
    <div class="post">
      <h3><%= post.title %></h3>
      <p><%= post.content %></p>
      <p class="meta">By <%= post.author %> on <%= post.createdAt %></p>
      <form action="/posts/<%= post.id %>/edit" method="GET" style="display:inline;">
        <button>Edit</button>
      </form>
      <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" style="display:inline;">
        <button>Delete</button>
      </form>
    </div>
  <% }) %>
</body>
</html>
